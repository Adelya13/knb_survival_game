<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/oswald_font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainTextStyle" parent="BasicTextStyle">
        <item name="android:textSize">36sp</item>
    </style>


    <style name="EditTextFormStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
    </style>

    <style name="EditTextStyle" parent="EditTextFormStyle">
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="textInputStyle">@style/BasicTextStyle</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:backgroundTint">@color/dark_red</item>
    </style>
</resources>
